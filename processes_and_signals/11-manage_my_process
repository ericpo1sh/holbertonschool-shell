#!/usr/bin/env bash
#
case $1 in
	start)
		./manage_my_process &
		echo "manage_my_process start"
		echo "pgrep /var/run/my_process.pid" > /var/run/my_process.pid
		;;

	stop)
		pkill -15 -f "manage_my_process"
		echo "manage_my_process stopped"
		rm /var/run/my_process.pid
		;;
		
	restart)
		pkill -15 -f "manage_my_process"
                rm /var/run/my_process.pid
		./manage_my_process &
		echo "pgrep /var/run/my_process.pid" > /var/run/my_process.pid
		echo "manage_my_process restarted"
esac
